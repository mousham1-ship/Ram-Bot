    }
    .chat-input button {
      background-color: #2563eb;
      color: white;
      border: none;
      padding: 10px 18px;
      border-radius: 8px;
      font-weight: bold;
    }
    footer {
      text-align: center;
      font-size: 0.9rem;
      padding: 10px;
      color: #555;
    }
