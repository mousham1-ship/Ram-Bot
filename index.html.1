    }
    .chat-body {
      flex: 1;
      padding: 20px;
      overflow-y: auto;
      background-color: #f9fafb;
    }
    .message {
      padding: 12px 18px;
      margin-bottom: 14px;
      border-radius: 20px;
      max-width: 80%;
      word-wrap: break-word;
    }
    .user {
      background-color: #2563eb;
      color: white;
      align-self: flex-end;
      border-bottom-right-radius: 0;
    }
    .bot {
      background-color: #e0e7ff;
      color: #1e3a8a;
